---
type Props = {
	tech: string[];
	isPen: boolean;
	hasLink?: boolean;
};
const { tech, hasLink, isPen } = Astro.props as Props;
---

<ul class="list">
	{tech.map((item) => (
		<li class="list__item--tech">
			{item}
		</li>
	))}
	{hasLink && 
		<li class="list__item--icon">
			Visit {isPen ? "Pen" : ""}
			<svg 
			fill="none" 
			viewBox="0 0 24 24" 
			stroke="currentColor" 
			stroke-linecap="round" 
			stroke-linejoin="round"
			stroke-width="2" 
			xmlns="http://www.w3.org/2000/svg"
			class="list__item--end icon">
				<path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
			</svg>
		</li>
	}
</ul>

<style lang="scss">
	.list {
		font-size: var(--ft-11);
		background: var(--dark);
		list-style: none;
		position: absolute;
		left: 0;
		right: 0;
		bottom: 0;
		padding: 6px 16px;
		color: var(--neutral);
		display: flex;
		align-items: center;
		transition: transform 0.3s, opacity 0.3s;
		&__item {
			&--tech + &--tech:before {
				content: "+";
			}
			&--icon {
				align-self: flex-start;
				margin-left: 10px;
			}
			&--end {
				margin-left: auto;
			}
		}
	}
</style>